{
  "name": "sophia-code",
  "displayName": "Sophia Code - AI Governance for Vibe Coding",
  "description": "One-click setup and governance guardrails for the Sophia Code community edition",
  "version": "0.1.0",
  "publisher": "themethodarq",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Education"
  ],
  "keywords": [
    "ai",
    "governance",
    "vibe coding",
    "sophia",
    "no-code",
    "low-code"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sophia.setupEnvironment",
        "title": "Setup Environment",
        "category": "Sophia",
        "icon": "$(tools)"
      },
      {
        "command": "sophia.openSetupWizard",
        "title": "Open Setup Wizard",
        "category": "Sophia",
        "icon": "$(rocket)"
      },
      {
        "command": "sophia.startServices",
        "title": "Start All Services",
        "category": "Sophia",
        "icon": "$(play)"
      },
      {
        "command": "sophia.stopServices",
        "title": "Stop All Services",
        "category": "Sophia",
        "icon": "$(stop)"
      },
      {
        "command": "sophia.restartServices",
        "title": "Restart Services",
        "category": "Sophia",
        "icon": "$(refresh)"
      },
      {
        "command": "sophia.openDashboard",
        "title": "Open Sophia Dashboard",
        "category": "Sophia",
        "icon": "$(globe)"
      },
      {
        "command": "sophia.createProject",
        "title": "Create New Project",
        "category": "Sophia",
        "icon": "$(new-folder)"
      },
      {
        "command": "sophia.checkPrerequisites",
        "title": "Check Prerequisites",
        "category": "Sophia",
        "icon": "$(check)"
      },
      {
        "command": "sophia.showLogs",
        "title": "Show Logs",
        "category": "Sophia"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sophiaControlCenter",
          "title": "Sophia Code",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "sophiaControlCenter": [
        {
          "id": "sophia.services",
          "name": "Services",
          "when": "sophia:installed"
        },
        {
          "id": "sophia.projects",
          "name": "Projects",
          "when": "sophia:installed"
        },
        {
          "id": "sophia.governance",
          "name": "Governance",
          "when": "sophia:installed"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "sophia.setupEnvironment",
          "when": "!sophia:installed"
        },
        {
          "command": "sophia.openSetupWizard",
          "when": "!sophia:installed"
        }
      ],
      "editor/title": [
        {
          "command": "sophia.openDashboard",
          "group": "navigation",
          "when": "sophia:installed"
        }
      ]
    },
    "configuration": {
      "title": "Sophia Code",
      "properties": {
        "sophia.installPath": {
          "type": "string",
          "default": "",
          "description": "Path where Sophia Code is installed"
        },
        "sophia.frontendPort": {
          "type": "number",
          "default": 5173,
          "description": "Port for the Sophia frontend"
        },
        "sophia.backendPort": {
          "type": "number",
          "default": 3000,
          "description": "Port for the Sophia backend"
        },
        "sophia.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start services when VS Code opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
